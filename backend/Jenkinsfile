pipeline {
    agent any
    environment {
        IMAGE_NAME = 'myacr.azurecr.io/backend:latest'
        // AZURE_CREDENTIALS = credentials('azure-docker-login')
    }

    stages {
        stage('Debug Info') {
            steps {
                echo '--- Debugging Environment ---'
                sh 'echo "Current Directory: $(pwd)"'
                sh 'echo "Listing files:" && ls -la'
                sh 'echo "Listing backend directory:" && ls -la backend || true'
                echo '-------------------------------'
            }
        }

        stage('Run Tests') {
            steps {
                dir('backend') {
                    echo 'Running tests with debug...'
                    sh 'chmod +x run-tests.sh'
                    sh './run-tests.sh || echo "⚠️ Tests failed, check output above"'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('backend') {
                    echo "Building Docker image $IMAGE_NAME with debug..."
                    sh 'docker version'
                    sh 'docker info'
                    sh 'docker build --progress=plain -t $IMAGE_NAME .'
                }
            }
        }

        // stage('Login to Azure Container Registry') {
        //     steps {
        //         echo 'Logging into Azure Container Registry...'
        //         sh 'echo $AZURE_CREDENTIALS_PSW | docker login myacr.azurecr.io -u $AZURE_CREDENTIALS_USR --password-stdin'
        //     }
        // }

        // stage('Push Docker Image') {
        //     steps {
        //         echo "Pushing Docker image $IMAGE_NAME..."
        //         sh 'docker push $IMAGE_NAME'
        //     }
        // }
    }

    post {
        success {
            echo '✅ Backend (Pistache C++) built and pushed successfully!'
        }
        failure {
            echo '❌ Backend build or tests failed.'
        }
    }
}
